# Server port
PORT=3000

# External Skinport API endpoint
SKINPORT_API_URL=https://api.skinport.com/v1/items

# Redis connection for caching item prices
REDIS_URL=redis://127.0.0.1:6379

# PostgreSQL connection string for users/products/purchases tables
DATABASE_URL=postgres://postgres:postgres@localhost:5432/skinport

# TTL (seconds) for cached Skinport item responses
ITEM_CACHE_TTL=300

# API tokens mapped to user IDs for authenticated purchases (comma-separated token:userId pairs)
USER_API_KEYS=demo_token:1
